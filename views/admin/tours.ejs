<%- include('../partials/head', { title: title }) %>
<%- include('../partials/header') %>

<main class="container">
    <div class="admin-header">
        <h1>Manage Tours</h1>
        <div class="header-actions">
            <a href="/admin/tours/new" class="btn btn-primary">Add New Tour</a>
        </div>
    </div>

    <% if (tours.length > 0) { %>
        <div class="admin-table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% tours.forEach(function(tour) { %>
                        <tr>
                            <td>
                                <strong><%= tour.title %></strong>
                                <br>
                                <small><%= tour.description.substring(0, 50) %>...</small>
                            </td>
                            <td><%= tour.category %></td>
                            <td>R<%= tour.price %></td>
                            <td><%= tour.duration %></td>
                            <td>
                                <span class="status-badge <%= tour.available ? 'active' : 'inactive' %>">
                                    <%= tour.available ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/admin/tours/<%= tour.id %>/edit" class="btn btn-small btn-secondary">Edit</a>
                                    <form action="/admin/tours/<%= tour.id %>/delete" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this tour?')">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="empty-state">
            <h2>No Tours Found</h2>
            <p>You haven't created any tours yet. Get started by adding your first tour experience.</p>
            <a href="/admin/tours/new" class="btn btn-primary">Create First Tour</a>
        </div>
    <% } %>
</main>

<%- include('../partials/footer') %>