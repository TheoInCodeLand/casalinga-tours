                <div class="popular__card__footer">
                  <div>
                    <span><i class="ri-time-line"></i></span> 4 Day's
                  </div>
                  <!-- <div>
                    <span><i class="ri-group-3-line"></i></span> 15+
                  </div> -->
                  <div>
                    <span><i class="ri-map-pin-2-line"></i></span> Bushbugridge 
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
